{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "framework": "express",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**/*"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.ts"
    }
  ]
}
